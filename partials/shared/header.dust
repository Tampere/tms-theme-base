<!doctype html>
    <html class="{#WP.document_class}{.}{@sep} {/sep}{/WP.document_class}" lang="{WP.language}">
        <head>
            <meta charset="utf-8">
            <meta http-equiv="x-ua-compatible" content="ie=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">

            {?Header.head_custom_scripts}
                {Header.head_custom_scripts|s}
            {/Header.head_custom_scripts}

            {@wphead /}
        </head>

        <body  class="{#WP.body_class}{.}{@sep} {/sep}{/WP.body_class}">

        <header id="top" class="site-header">
            <a href="#main-content" class="skip-to-content">
                {Strings.s.header.skip_to_content|s}
            </a>

            {>"shared/header-inner" /}
        </header>

        <nav id="js-fly-out-nav" class="fly-out-nav overlay overlay--dark-80" aria-hidden="true">
            <div class="is-overlay" tabindex="-1" data-micromodal-close>
                <div class="fly-out-nav__inner has-background-primary has-text-white" role="dialog" aria-modal="true">
                    <button class="fly-out-nav__close" data-micromodal-close>
                        <span class="is-sr-only"> {Strings.s.header.close_menu|s} </span>
                        {>"ui/icon" icon="close" class="icon--large is-primary-invert" /}
                    </button>

                    {@menu menu_name="primary" depth="2" ul_id="js-navbar-menu" ul_classes="bulmally-navbar fly-out-nav__primary is-family-secondary" menuitem_partial="ui/menu/menu-item" /}

                    {@menu menu_name="secondary" depth="1" ul_classes="secondary-menu is-unstyled" menuitem_partial="ui/menu/menuitem-secondary" /}

                    {^Header.hide_search}
                        <div class="h4 mt-9 mb-4">
                            {Strings.s.header.search_title|s}
                        </div>

                        {>"search-form" button_class="is-primary is-inverted mb-2 mb-0-tablet" /}
                    {/Header.hide_search}

                    {>"ui/icon" icon="tampere-finland" class="is-primary-invert" /}
                </div>
            </div>
        </nav>

        {?Header.breadcrumbs}
        {?Header.show_breadcrumbs_in_header}
        <div class="section pt-6 pb-7">
            <div class="container">
                {>"ui/breadcrumbs" breadcrumbs=Header.breadcrumbs /}
            </div>
        </div>
        {/Header.show_breadcrumbs_in_header}
        {/Header.breadcrumbs}
